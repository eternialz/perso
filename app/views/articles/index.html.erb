<section>
    <div class="row list">
        <% @articles.each do |a| %>
            <div class="item">
                <h3 class="title">
                    <%= link_to a.title, blog_path(a) %>
                </h3>
                <div class="date title -tiny">
                    <%= a.created_at.strftime("%e %B %Y") %>
                </div>
                <p class="content">
                    <%= a.description[0..200] %>...
                </p>
                <%= link_to blog_path(a), class: "heavy-link" do %>
                    Voir plus <%= fa_icon "arrow-right" %>
                <% end %>
            </div>
        <% end %>
        <%= paginate @articles %>
    </div>
</section>
