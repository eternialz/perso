<section>
    <div class="article row">
        <div class="clearfix">
            <%= render partial: 'buttons' %>
            <% cache @article do %>
                <header>
                    <h3 class="title">
                        <%= @article.title %>
                    </h3>
                    <p class="content">
                        <%= @article.description %>
                    </p>
                </header>
                <nav>
                    <h6 class="title -tiny">Navigation</h6>
                </nav>
                <div class="article-content">
                    <h6 class="title -tiny">Publi√© le <%= I18n.localize @article.created_at, format: "%e %B %Y" %></h6>
                    <%= raw @content %>
                </div>
            <% end %>
        </div>
        <%= render partial: 'buttons' %>
    </div>
</section>
