<section>
    <div class="row list">
        <h3 class="title -icon"><%= fa_icon "newspaper-o" %><span>Derniers articles du blog</span></h3>
        <% @articles.each do |a| %>
            <div class="item">
                <h3 class="title">
                    <%= link_to a.title, blog_path(a) %>
                </h3>
                <div class="date title -tiny">
                    <%= a.created_at.strftime("%e %B %Y") %>
                </div>
                <p class="content">
                    <%= a.description[0..200] %> ...
                </p>
                <%= link_to blog_path(a), class: "heavy-link" do %>
                    Voir plus <%= fa_icon "arrow-right" %>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="row">
        <div class="col-12 -sp -wp-top">
            <%= link_to blog_index_path, class: "btn -accent2 float -r" do %>
                <%= fa_icon "eye" %> Voir tout mes articles
            <% end %>
        </div>
    </div>
</section>
